{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "rootDir": "./src",
    "noEmit": true,
    "paths": {
      "@sackrin/organic-core/*": ["../organic-core/src/*"],
      "@sackrin/organic-root/*": ["../organic-root/src/*"],
      "@sackrin/organic-container/*": ["../organic-container/src/*"]
    }
  },
  "references": [
    {
      "path": "../organic-core"
    },
    {
      "path": "../organic-root"
    },
    {
      "path": "../organic-container"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
