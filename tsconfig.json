{
  "compilerOptions": {
    "noEmit": true,
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules", "packages"],
      "@sackrin/organic-assert/*": ["packages/organic-assert/src/*"],
      "@sackrin/organic-property/*": ["packages/organic-property/src/*"],
      "@sackrin/organic-validator/*": ["packages/organic-validator/src/*"],
      "@sackrin/organic-condition/*": ["packages/organic-condition/src/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["packages", "jest-dom/extend-expect"],
  "exclude": ["node_modules", "lib"]
}
